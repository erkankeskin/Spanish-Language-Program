<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.guvenluckyboy.spanishlearn.MainPage"
    android:background="@drawable/bg2">



    <ImageView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:id="@+id/playBtn"
        android:src="@drawable/sbubble"
        android:onClick="clickBubble1"
        android:scaleType="fitXY"
        android:layout_marginBottom="87dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:theme="@style/AppTheme" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BAŞLA"
        android:id="@+id/playTxt"
        android:layout_alignTop="@+id/playBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:id="@+id/AboutUsBtn"
        android:src="@drawable/sbubble"
        android:onClick="clickBubble3"
        android:scaleType="fitXY"
        android:layout_below="@+id/settingsBtn"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:id="@+id/settingsBtn"
        android:src="@drawable/sbubble_right"
        android:onClick="clickBubble2"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/playBtn"
        android:layout_marginTop="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="YAZ &amp; DİNLE"
        android:id="@+id/settingsTxt"
        android:layout_alignTop="@+id/playTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HAKKIMIZDA"
        android:id="@+id/AboutUsTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_alignTop="@+id/settingsTxt" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/hola" />

</RelativeLayout>
